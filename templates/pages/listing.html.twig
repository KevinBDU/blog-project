{% extends "base.html.twig" %}
{% block title %}Listing Article
{% endblock %}
{% block body %}
	{% block header %}{% endblock %}
	<div class="container">
		<section class="listing-post">
			{% for article in articles %}
				<article class="post">
					<a class="content-img" href="{{ path('blog_detail', {'slug': article.slug}) }}">
						<img src="{{ asset("uploads/img/" ~ article.images) }}" alt=""/>
					</a>
					<div class="post-content">
						<a href="#">
							<p class="tag">{{article.category}}</p>
						</a>
						<h5 class="title">
							<a href="{{ path('blog_detail', {'slug': article.slug}) }}">{{ article.title }}</a>
						</h5>
						<p>{{ article.description }}</p>
						<div class="btn">
							<a href="{{ path('blog_detail', {'slug': article.slug}) }}">Read More</a>
						</div>
					</div>
				</article>
			{% endfor %}

			{{ knp_pagination_render(articles) }}

		</section>
		{% block sidebar %}
			{{parent()}}
		{% endblock %}
	</div>
{% endblock %}
